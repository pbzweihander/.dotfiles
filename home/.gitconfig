# vim: noexpandtab sw=8
[include]
	path = .gitconfig.local
[user]
	name = pbzweihander
	email = pbzweihander@gmail.com
	signingKey = ~/.ssh/id_ed25519.pub
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
[commit]
	gpgsign = true
[core]
	editor = helix
	pager = less -+XF -Qc
	excludesfile = ~/.gitexclude
	fscache = yes
	autocrlf = no
	quotepath = no
	precomposeunicode = yes
[log]
	date = iso8601
[color]
	ui = auto
[diff]
	renames = copies
	tool = vimdiff
	compactionHeuristic = true
[difftool]
	prompt = no
[fetch]
	prune = yes
[branch]
	autosetuprebase = always
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[credential]
	helper = cache --timeout=3600
[credential "https://github.com"]
	username = pbzweihander
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
	stash = false
[interactive]
	diffFilter = delta --color-only --features=interative
[init]
	defaultBranch = main

[delta]
	features = decorations
	pager = less -+XF -Qc
	side-by-side = true
	plus-style = syntax green
	minus-style = syntax red
