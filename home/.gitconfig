# vim: noexpandtab sw=8
[user]
	name = pbzweihander
	email = pbzweihander@gmail.com
[core]
	editor = nvim
	pager = less -+XF -Qc
	excludesfile = ~/.gitexclude
	fscache = yes
	autocrlf = no
	quotepath = no
	precomposeunicode = yes
[log]
	date = iso8601
[color]
	ui = auto
[diff]
	renames = copies
	tool = vimdiff
	compactionHeuristic = true
[difftool]
	prompt = no
[fetch]
	prune = yes
[branch]
	autosetuprebase = always
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[credential]
	helper = cache --timeout=3600
[credential "https://github.com"]
	username = pbzweihander
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[alias]
	g = "log --graph --pretty=\"format:%C(auto)%h%d %s%x1b[38;5;022m% GS%x1b[0m\""
[pager]
	log = /usr/share/git/diff-highlight/diff-highlight | less -+XF -Qc
	show = /usr/share/git/diff-highlight/diff-highlight | less -+XF -Qc
	diff = /usr/share/git/diff-highlight/diff-highlight | less -+XF -Qc
[interactive]
	diffFilter = /usr/share/git/diff-highlight/diff-highlight
