#
# basic commands
#

# ls or exa
if (( $+commands[exa] )); then
    alias l='exa --group-directories-first'
    alias ls='exa -F --group-directories-first'
    alias la='exa -aF --group-directories-first'
    alias ll='exa -lgF --group-directories-first'
    alias lla='exa -algF --group-directories-first'
else
    alias l='ls --color=auto'
    alias ls='ls --color=auto'
    alias la='ls --color=auto -AF'
    alias ll='ls --color=auto -lF'
    alias lla='ls --color=auto -AlF'
    alias lh='ls --color=auto -AlhF'
fi

# color=auto
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'

# no vi!
if (( $+commands[vim] )); then
    alias vi=vim
fi

# interactive
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# change directory
alias ccd='cd ..'
alias cdd='cd $OLDPWD'

#
# rust
#

# cargo
alias ci='cargo init'
alias cib='cargo init --bin'
alias cn='cargo new'
alias cnb='cargo new --bin'
alias cc='cargo check'
alias cb='cargo build'
alias cbr='cargo build --release'
alias ct='cargo test'
alias cr='cargo run'
alias cu='cargo update'
alias ciu='cargo install-update'
alias cpb='cargo publish'

# clippy
alias ccl='cargo clippy'

# cargo-edit
alias ca='cargo add'
alias cug='cargo upgrade'
alias crm='cargo rm'

# bauerbill
alias bb='bb-wrapper'

# vs-code
alias c.='code .'

# zsh z
alias zr='z -r'
alias zl='z -l'
alias zt='z -t'
alias zc='z -c'

# bat
if (( $+commands[bat] )); then
    alias cat='bat'
fi

# wttr.in
wttr() {
    LOCATION=${1// /+}
    curl ko.wttr.in/$LOCATION
}

