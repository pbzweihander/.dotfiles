#
# basic commands
#

alias rm='rm -i'
alias rmf='rm -f'
alias rmr='rm -ir'
alias rmrf='rm -rf'
alias cp='cp -i'
alias cpr='cp -ir'
alias cpf='cp -f'
alias cprf='cp -rf'
alias mv='mv -i'
alias mvf='mv -f'

# color=auto
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'

# change directory
alias ccd='cd ..'
alias cccd='cd ../..'
alias ccccd='cd ../../..'
alias cdd='cd $OLDPWD'

#
# Docker
#

alias dk=docker

# docker-compose
alias dc=docker-compose

# dockviz
alias dockviz="docker run -it --rm -v /var/run/docker.sock:/var/run/docker.sock nate/dockviz"

#
# Gnome
#

# nautilus
alias n.='nautilus . &'

#
# etc
#

# arch package managers
alias ya=yay
alias pk=yay
alias pc=pacman

# vs-code
alias c.='code . &'

# micro
alias mi=micro

# xclip
alias xc='xclip -i -selection clipboard'
alias xp='xclip -o -selection clipboard'

# python coverage
alias cv='coverage run --branch'
alias cvr='coverage report -m'
