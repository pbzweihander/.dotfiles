#

# nautilus
alias n.='nautilus . &'

# evince
ev() {
    evince $* &
}

#
# etc
#

# arch package managers
alias ya=yay
alias pk=yay
alias pc=pacman

# vscode
alias c.='code . &'

# godot
alias g.='godot-mono -e > /dev/null 2> /dev/null &'

# micro
alias mi=micro

# amp
alias am=amp

# clipboard
if hash wl-copy 2>/dev/null; then
    alias xc='wl-copy'
    alias xp='wl-paste'
else
    alias xc='xclip -i -selection clipboard'
    alias xp='xclip -o -selection clipboard'
fi

# hangul-misstypings
alias ㅊㅇ=cd
alias ㅣㄴ=ls

# sudo vim
alias svim="sudo -E vim"

