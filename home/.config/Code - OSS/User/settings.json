{
    "editor.fontFamily": "'Victor Mono'",
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.cursorSurroundingLines": 3,
    "dance.modes": {
        "": {
            "hiddenSelectionsIndicatorsDecoration": {
                "after": {
                    "color": "$list.warningForeground"
                },
                "backgroundColor": "$inputValidation.warningBackground",
                "borderColor": "$inputValidation.warningBorder",
                "borderStyle": "solid",
                "borderWidth": "1px",
                "isWholeLine": true
            }
        },
        "input": {
            "cursorStyle": "underline-thin"
        },
        "insert": {
            "onLeaveMode": [
                [
                    ".selections.save",
                    {
                        "register": " insert"
                    }
                ]
            ]
        },
        "normal": {
            "cursorStyle": "block",
            "selectionBehavior": "character",
            "lineNumbers": "on",
            "decorations": {
                "applyTo": "main",
                "backgroundColor": "$editor.hoverHighlightBackground",
                "isWholeLine": false
            },
            "onEnterMode": [
                [
                    ".selections.restore",
                    {
                        "register": " ^",
                        "try": true
                    }
                ]
            ],
            "onLeaveMode": [
                [
                    ".selections.save",
                    {
                        "register": " ^",
                        "style": {
                            "borderColor": "$editor.selectionBackground",
                            "borderStyle": "solid",
                            "borderWidth": "2px",
                            "borderRadius": "1px"
                        },
                        "until": [
                            [
                                "mode-did-change",
                                {
                                    "include": "normal"
                                }
                            ],
                            [
                                "selections-did-change"
                            ]
                        ]
                    }
                ]
            ]
        }
    },
    "workbench.colorTheme": "Snazzy",
    "git.enableSmartCommit": true,
}